    <h1 id="user-choice"></h1>
    <h1 id="versus">VS</h1>
    <h1 id="computer-choice"></h1>
    <h1 id="result"></h1>

    <button id="forehand">Forehand</button>
    <button id="backhand">Backhand</button>
    <button id="dropshot">Drop Shot</button>  

    <div id="special-point-container">
      <h1 id="special-point"></h1>
    </div>


<button class="btn btn-success" id="start" type="button">Start</button>

<table id="score-table">
   <tr>
      <td>Match</td>
      <td id="match">0-0</td>
   </tr>
   <tr>
      <td>Sets</td>
      <td id="sets">0-0</td>
   </tr>
    <tr>
      <td>Tie Break</td>
      <td id="tiebreak">0-0</td>
   </tr>
    <tr>
      <td>Games</td>
      <td id="games">0-0</td>
   </tr>
    <tr>
      <td>Points</td>
      <td id="points">0-0</td>
   </tr>   
</table>

<tabLe id="shot-history">
  <tr>
    <th>ID</th>
    <th>Player 1 Shot</th>
    <th>Player 2 Shot</th>
    <th>Rally Winner</th>
  </tr>
  
  <% @shots.each do |shot| %>

      <tr>
        <td><%= shot.id %></td>
        <td class="log"><%= shot.player1_shot.capitalize %></td>
        <td class="log"><%= shot.player2_shot.capitalize %></td>
        <td class="log"><%= shot.rally_winner.capitalize %></td>
      </tr>

  <% end %>

</table>

    <script src="/javascript/player.js"></script>
    <script src="/javascript/game.js"></script>
    <script src="app.js"></script>
 
